<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-denger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">名前：</label>
    <div class="col-sm-4">
      <%= f.text_field :name, id:"inputName", class: "form-control" %>
    </div>
    <div class="col-sm-2">
      <label for="inputAge" class="col-sm-2 control-label">年齢</label>
        <%= f.text_field :age, id:"inputAge", class: "form-control" %>
      <div class="col-sm-4"></div>
    </div>
  </div>
  <div class="form-group">
    <label for="inputContent"class="col-sm-2 control-label">内容：</label>
    <div class="col-sm-6">
      <%= f.text_area :body, size: 40, maxlength: 20, id:"inputContent", class: "form-control" %>
    </div>
    
    <br>
    <div class="col-sm-4"></div>
    <%= f.submit class: "btn btn-sm btn-default" %>
  </div>
<% end %>
  