<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label class="col-sm-2 control-label">名前：</label>
    <div class="col-sm-6">
      <%= f.text_field :name, size: 40, maxlength: 20, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
  </div>
      <%= f.submit class: "btn btn-sm btn-default" %>
      <% end %>
      </div>
      <div class="col-sm-5">
        <div class="panel panel-primary">
          <div class="panel-heading">
          メッセージ一覧
          </div>
          <div class="panel-body">
            <% @messages.each do |message| %>
              <span class="label label-info"><%= message.name %></span>
              <%= message.body %>
                <br>
              (
                <%= link_to "edit" , edit_message_path(message) %>
              )
            <% end %>
          </div>
        </div>
      </div>
            <% end %>
            <% end %>
