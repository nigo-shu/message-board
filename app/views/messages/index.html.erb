


<div class="container">
  <div class="row">
      <div class="col-sm-2">
          </div>
    <div class="col-sm-4">
      <%= form_for(Message.new)do |f| %>
      <span>名前
      <%= f.text_field :name %></span>
      <br>
      <br>
      <span>内容
      <%= f.text_area :body %></span>
      <br>
      <br>
      <%= f.submit class: "btn btn-sm btn-default" %>
      <% end %>
      </div>
   

    <div class="col-sm-5">
      <div class="panel panel-primary">
        <div class="panel-heading">
        メッセージ一覧
        </div>
        <div class="panel-body">
        <% @messages.each do |message| %>
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        <br>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-sm-1">
      </div>
</div>
</div>

