<% if @message.errors.present? %>

    <div class="alert alert-danger">
      
<%= alert %>

      <ul>
        
<% @message.errors.full_messages.each do |full_message| %>

          <li>
            
<%= full_message %>

          </li>
        
<% end %>
 
      </ul>
    </div>
  
<% end %>

<div class="container">
  <div class="row">
      <div class="col-sm-2">
          </div>
    <div class="col-sm-4">
        <%= form_for(@message) do |f| %>

  



      <span style="color:#fff;"><strong>名前</strong></span>
      <%= f.text_field :name %>
      <br>
      <br>
      <span style="color:#fff;"><strong>内容</strong></span>
      <%= f.text_area :body %>
      <br>
      <br>
      <%= f.submit class: "btn btn-sm btn-default" %>
      <% end %>
      </div>
   

    <div class="col-sm-5">
      <div class="panel panel-primary">
        <div class="panel-heading">
        メッセージ一覧
        </div>
        <div class="panel-body">
        <% @messages.each do |message| %>
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        <br>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-sm-1">
      </div>
</div>
</div>

